<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}">
                        <Grid x:Name="PART_ViewHost" Background="{DynamicResource MainBackgourndBrush}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <FadeImage x:Name="PART_ImageBackground" Grid.RowSpan="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                            <!--Overlay Image-->
                            <StackPanel HorizontalAlignment="Stretch" Grid.Row="0" Grid.RowSpan="3" VerticalAlignment="Center" 
                                        Width="{StaticResource DesignWidth}" Height="{StaticResource DesignHeight}" 
                                        Background="Black" Opacity="0.3">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Settings Fullscreen.MainBackgroundImageDarkAmount}" Value="0.0">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>

                            <StackPanel Grid.RowSpan="3" HorizontalAlignment="Stretch"  Height="{StaticResource DesignHeight}">
                                <StackPanel.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                <Setter Property="Control.Background" Value="{DynamicResource DarkLightBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                            </StackPanel>

                            <StackPanel Grid.RowSpan="3" Height="{StaticResource DesignHeight}">
                                <StackPanel.Style>
                                    <Style>
                                        <Setter Property="Control.Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                <Setter Property="Control.Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Line Stroke="#909090" Opacity="0.5" StrokeThickness="2" Y1="{StaticResource DesignHeight}" HorizontalAlignment="Left" Grid.Row="0" Grid.RowSpan="3" Margin="482,0,0,0"/>
                            </StackPanel>

                            <Grid Grid.Row="0" Background="Transparent"
                                  Height="100">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="115" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>

                                <!--Extra Metadata Tools Profile Picture-->
                                <DockPanel Grid.Column="1">
                                    <TextBlock Name="ProfilePicturePath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="{}{0}{1}">
                                                            <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                            <Binding Source="\ExtraMetadata\Themes\Common\ProfilePicture.png"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1"  Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <Border CornerRadius="60" Height="60" Width="60" VerticalAlignment="Bottom">
                                            <Border.Background>
                                                <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="{Binding ElementName=ProfilePicturePath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Margin="15,43.718,0,13.718" Text="{DynamicResource ProfileName}" Style="{DynamicResource TextBlockBaseStyle}" Foreground="#FFEBEBEB" FontFamily="Segoe UI Semibold" FontSize="32" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1"  Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <Border CornerRadius="60" Height="60" Width="60" VerticalAlignment="Bottom">
                                            <Border.Background>
                                                <ImageBrush RenderOptions.BitmapScalingMode="Fant" ImageSource="{ThemeFile 'Media/ProfilePicture.png'}"/>
                                            </Border.Background>
                                        </Border>
                                        <TextBlock Margin="15,43.718,0,13.718" Text="{DynamicResource ProfileName}" Style="{DynamicResource TextBlockBaseStyle}" Foreground="#FFEBEBEB" FontFamily="Segoe UI Semibold" FontSize="32" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DockPanel>

                                <ContentControl x:Name="PART_ElemBatteryStatus" Focusable="False" FontSize="42"
                                            VerticalAlignment="Bottom" Margin="10,0,10,0"
                                            Grid.Column="6">
                                    <ContentControl.Style>
                                        <Style TargetType="ContentControl">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Critical">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCritical}" />
                                                    <Setter Property="Foreground" Value="Red" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Low">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusLow}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="Medium">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusMedium}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.Charge}" Value="High">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusHigh}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding PowerStatus.IsCharging}" Value="True">
                                                    <Setter Property="Content" Value="{DynamicResource BatteryStatusCharging}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>

                                <TextBlock x:Name="PART_TextBatteryPercentage" Style="{DynamicResource TextBlockBaseStyle}"
                                       VerticalAlignment="Bottom" Margin="0,0,20,0"
                                       Grid.Column="7"/>

                                <TextBlock x:Name="PART_TextClock" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" Foreground="#FFEBEBEB"
                                       VerticalAlignment="Bottom" Margin="20,0,20,0"
                                       Grid.Column="10"/>

                                <ButtonEx x:Name="PART_ButtonNotifications" VerticalAlignment="Bottom"
                                          Margin="10,0,10,0" Height="48" Width="48"
                                          Grid.Column="8">
                                    <Button.Content>
                                        <Grid>
                                            <TextBlock Text="&#xeea3;" FontFamily="{StaticResource FontIcoFont}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"
                                                       Foreground="White" FontSize="30" />
                                            <TextBlock Text="&#x25CF;" Foreground="{DynamicResource GlyphBrush}"
                                                       HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                                       FontSize="24" Margin="0,0,5,0" />
                                        </Grid>
                                    </Button.Content>
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource ButtonTopMenu}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Api Notifications.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Hidden"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </ButtonEx>

                                <ButtonEx x:Name="PART_ButtonMainMenu" VerticalAlignment="Bottom"
                                          Style="{DynamicResource ButtonTopMenu}"
                                          Margin="10,0,10,0" Height="48"
                                          Grid.Column="9">
                                    <Button.Content>
                                        <Image RenderOptions.BitmapScalingMode="Fant" Margin="2"
                                           Source="{ThemeFile 'Images/applogo_clean.png'}" />
                                    </Button.Content>
                                </ButtonEx>
                            </Grid>

                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="100" Grid.RowSpan="100" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="90" />
                                    <ColumnDefinition Width="450" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="75" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="550"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!--Show/Hide Grid Info-->
                                <Grid Grid.Row="0" Grid.Column="2" >
                                    <Grid.Style>
                                        <Style>
                                            <Setter Property="Control.Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                    <Setter Property="Control.Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-35,0,0">
                                        <TextBlock Text="{DynamicResource LOCAllGames}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="44" ></TextBlock>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,160,0">
                                        <Border Background="{DynamicResource TabsBrush}" Width="400" Height="60" CornerRadius="5"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,90,160,0">
                                        <TextBlock Text="{DynamicResource LOCMenuSortByTitle}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" FontFamily="Segoe UI" >
                                        </TextBlock>
                                        <TextBlock Text=" " Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" >
                                        </TextBlock>
                                        <StackPanel>
                                            <StackPanel.Style>
                                                <Style>
                                                    <Setter Property="Control.Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ToggleFilterRecently, Path=IsChecked}" Value="True">
                                                            <Setter Property="Control.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{DynamicResource LOCQuickFilterRecentlyPlayed}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" FontFamily="Segoe UI" />
                                        </StackPanel>
                                        <StackPanel>
                                            <StackPanel.Style>
                                                <Style>
                                                    <Setter Property="Control.Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ToggleFilterFavorite, Path=IsChecked}" Value="True">
                                                            <Setter Property="Control.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{DynamicResource LOCQuickFilterFavorites}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" FontFamily="Segoe UI" />
                                        </StackPanel>
                                        <StackPanel>
                                            <StackPanel.Style>
                                                <Style>
                                                    <Setter Property="Control.Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ToggleFilterMostPlayed, Path=IsChecked}" Value="True">
                                                            <Setter Property="Control.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{DynamicResource LOCQuickFilterMostPlayed}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" FontFamily="Segoe UI"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <StackPanel.Style>
                                                <Style>
                                                    <Setter Property="Control.Visibility" Value="Collapsed" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ToggleFilterAll, Path=IsChecked}" Value="True">
                                                            <Setter Property="Control.Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                            <TextBlock Text="{DynamicResource LOCQuickFilterAllGames}" Style="{DynamicResource TextBlockBaseStyle}" FontSize="26" FontFamily="Segoe UI" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,50,0">
                                        <ButtonEx x:Name="PART_ButtonSearch" Height="60" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            <Button.Content>
                                                <TextBlock Text="&#59166;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="{DynamicResource TextBrush}"/>
                                            </Button.Content>
                                        </ButtonEx>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,80,210,0">
                                        <ButtonEx x:Name="PART_ButtonFilter" Height="60" Width="150" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            <Button.Content>
                                                <TextBlock Text="&#59164;" FontFamily="Segoe MDL2 Assets" FontSize="32" Foreground="{DynamicResource TextBrush}"/>
                                            </Button.Content>
                                        </ButtonEx>
                                    </StackPanel>
                                </Grid>

                                <Grid>
                                    <Grid x:Name="SelectedIndex0Logic">
                                        <Grid.Style>
                                            <Style TargetType="Grid">
                                                <Setter Property="Height" Value="0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="0">
                                                        <Setter Property="Height" Value="0"/>
                                                        <DataTrigger.EnterActions>
                                                            <RemoveStoryboard BeginStoryboardName="ChangeTo1"/>
                                                            <RemoveStoryboard BeginStoryboardName="ChangeTo2"/>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="7">
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="ChangeTo1">
                                                                <Storyboard FillBehavior="HoldEnd">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="1" Duration="0:0:0.01"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="8">
                                                        <DataTrigger.EnterActions>
                                                            <RemoveStoryboard BeginStoryboardName="ChangeTo1"/>
                                                            <BeginStoryboard x:Name="ChangeTo2">
                                                                <Storyboard FillBehavior="HoldEnd">
                                                                    <DoubleAnimation Storyboard.TargetProperty="Height" To="2" Duration="0:0:0.01"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Grid.Style>
                                    </Grid>
                                </Grid>

                                <DockPanel x:Name="ListItems" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" VerticalAlignment="Top" Focusable="False">
                                    <ListBoxEx x:Name="PART_ListGameItems"
                                           FocusVisualStyle="{x:Null}"
										   VerticalAlignment="Top" 
										   HorizontalAlignment="Left"			
										   BorderThickness="0"
                                           KeyboardNavigation.DirectionalNavigation="Once"
                                           ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                               ScrollViewer.CanContentScroll="True"
                                               ScrollToSelectedBehavior.Enabled="True"
                                           AlternationCount="{Binding Items.Count, RelativeSource={RelativeSource Self}}">
                                        <ListBoxEx.Style>
                                            <Style TargetType="ListBoxEx">
                                                <Setter Property="Margin" Value="290,292.5,100,0"/>
                                                <Setter Property="Opacity" Value="1"/>
                                                <Setter Property="Height" Value="320"/>
                                                <Setter Property="Background" Value="Transparent" />
                                                <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
                                                <Style.Triggers>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings GridItemHeightRatio}" Value="3"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,240,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings GridItemHeightRatio}" Value="4"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,255,100,0"/>
                                                    </MultiDataTrigger>
                                                    <!--MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="0"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="1"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="2"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="3"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="4"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="5"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger>
                                                    <MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="6"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="290,300,100,0"/>
                                                    </MultiDataTrigger-->
                                                    <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                        <Setter Property="Control.Opacity" Value="1"/>
                                                        <Setter Property="Control.Height" Value="860"/>
                                                        <Setter Property="Control.Margin" Value="490,150,0,0" />
                                                        <Setter Property="Control.Width" Value="1420"/>
                                                        <Setter Property="Control.Background" Value="Transparent"/>
                                                        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ListBoxEx.Style>
                                    </ListBoxEx>
                                </DockPanel>
                                
                                <!--XBOX_ListGames-->
                                <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Focusable="False">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Setter Property="Margin" Value="0,0,0,0"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="False">
                                                        <Setter Property="Visibility" Value="Hidden" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=SelectedIndex0Logic, Path=Height}" Value="1">
                                                        <Setter Property="Margin" Value="-150,0,150,0"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ElementName=SelectedIndex0Logic, Path=Height}" Value="2">
                                                        <Setter Property="Margin" Value="-200,0,200,0"/>
                                                    </DataTrigger>
                                                    <!--MultiDataTrigger>
                                                        <MultiDataTrigger.Conditions>
                                                            <Condition Binding="{Binding ElementName=MoreGames, Path=IsChecked}" Value="True"/>
                                                            <Condition Binding="{Settings Fullscreen.Columns}" Value="7"/>
                                                            <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=SelectedIndex}" Value="7"/>
                                                        </MultiDataTrigger.Conditions>
                                                        <Setter Property="Margin" Value="-150,0,150,0"/>
                                                    </MultiDataTrigger-->
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <ListBoxEx x:Name="SelectedIndex0"
                                    Focusable="False"
                                    Background="Transparent" 
								    BorderThickness="0"
                                    VirtualizingPanel.IsContainerVirtualizable="True"     
                                    VirtualizingPanel.IsVirtualizing="True"
                                    VirtualizingPanel.ScrollUnit="Item" 
                                    VirtualizingPanel.VirtualizationMode="Recycling"     
                                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                    Height="480"
                                    Width="420"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Bottom"
                                    AlternationCount="{Binding ElementName=PART_ListGameItems, Path=Items.Count}"
                                    ItemContainerStyle="{DynamicResource SelectedIndex0ListGameItem}"
                                                   SelectedItem="{Binding ElementName=PART_ListGameItems, Path=SelectedItem}">
                                            <ListBoxEx.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <VirtualizingStackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" ></VirtualizingStackPanel>
                                                </ItemsPanelTemplate>
                                            </ListBoxEx.ItemsPanel>
                                            <ListBoxEx.Style>
                                                <Style>
                                                    <Setter Property="ItemsControl.ItemsSource" Value="{Binding ElementName=PART_ListGameItems, Path=ItemsSource}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameStatus, Path=Visibility}" Value="Visible">
                                                            <Setter Property="ItemsControl.ItemsSource" Value="{Binding ElementName=BlankList, Path=ItemsSource}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ListBoxEx.Style>
                                        </ListBoxEx>
                                    </StackPanel>
                                </Grid>

                                <Grid x:Name="SelectedIndex_0_Highlighter" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=SelectedIndexLogic, Path=Height}" Value="0"/>
                                                        <Condition Binding="{Binding ElementName=PART_ListGameItems, Path=IsKeyboardFocusWithin}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <StackPanel Margin="-5" Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Focusable="False">
                                        <Button Focusable="False" Tag="{DynamicResource Banners}" Style="{DynamicResource HighlighterLARGE}"/>
                                    </StackPanel>
                                </Grid>

                                

                                <StackPanel x:Name="SelectedIndexLogic"  Focusable="False">
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Height" Value="100"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
