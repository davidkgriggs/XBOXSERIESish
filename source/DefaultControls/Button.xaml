                            <Setter Property="Visibility" Value="Collapsed" TargetName="MainShader"/>
                            <Setter Property="Opacity" Value="0" TargetName="Image"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="Back"/>
                            <Setter Property="Visibility" Value="Visible" TargetName="AllGamesSelected"/>
                            <Setter Property="Height" Value="70"/>
                            <Setter Property="MinHeight" Value="70"/>
                            <Setter Property="Width" Value="480"/>
                            <Setter Property="MinWidth" Value="480"/>
                            <Setter Property="Margin" Value="0,0,0,0" TargetName="MainBorder"/>
                            <Setter Property="Margin" Value="0,0,0,0" TargetName="BlurBorder"/>
                        </DataTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard Storyboard="{StaticResource IsClickedOpacity099}"/>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard Storyboard="{StaticResource IsClickedOpacity1}"/>
